# ===========================
# Doctor de Errores - Environment Variables
# ===========================
# 1. Nunca commitees el archivo .env

# ===========================
# AWS Configuration
# ===========================

# AWS Region para servicios (DynamoDB, Bedrock, etc.)
AWS_REGION=us-east-1

# Habilitar almacenamiento de perfiles de usuario en DynamoDB
ENABLE_STORAGE=false

# DynamoDB Table para persistencia de perfiles de usuario
DYNAMODB_TABLE_NAME=doctor-errores-profiles

# ===========================
# AI Services Configuration
# ===========================

# ===== Amazon Bedrock =====
# Habilitar fallback con Bedrock
ENABLE_BEDROCK=false

# Model ID de Bedrock (opciones: anthropic.claude-v2, anthropic.claude-instant-v1, amazon.titan-text-express-v1)
BEDROCK_MODEL_ID=anthropic.claude-v2

# Parametros del modelo
BEDROCK_MAX_TOKENS=500
BEDROCK_TEMPERATURE=0.7
BEDROCK_TOP_P=0.9

# ===== OpenAI =====
# Habilitar fallback con OpenAI
ENABLE_OPENAI=false

# API Key de OpenAI (obtener en https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Modelo de OpenAI (opciones: gpt-4o-mini, gpt-4o, gpt-4-turbo, gpt-3.5-turbo)
OPENAI_MODEL=gpt-4o-mini

# Parametros del modelo
OPENAI_MAX_TOKENS=300
OPENAI_TEMPERATURE=0.7

# ===========================
# Feature Flags
# ===========================

# Habilitar fallback a IA cuando no hay match en KB
ENABLE_AI_FALLBACK=true

# Habilitar cache de respuestas de IA
ENABLE_AI_CACHE=true

# Provider preferido (bedrock, openai, mock)
AI_PROVIDER=openai

# Habilitar telemetria y analytics
ENABLE_TELEMETRY=true

# Habilitar logging detallado
ENABLE_DEBUG_LOGGING=false

# Habilitar sanitizacion de informacion sensible
ENABLE_SANITIZATION=true

# ===========================
# Response Configuration
# ===========================

# Longitud maxima de respuesta de voz (caracteres)
MAX_VOICE_RESPONSE_LENGTH=300

# Longitud maxima de respuesta en card (caracteres)
MAX_CARD_RESPONSE_LENGTH=1000

# Timeout para llamadas a IA (segundos)
AI_TIMEOUT_SECONDS=5

# ===========================
# Cache Configuration
# ===========================

# TTL del cache de respuestas (segundos)
CACHE_TTL_SECONDS=3600

# TTL del cache de perfiles de usuario (segundos)
PROFILE_CACHE_TTL_SECONDS=86400

# ===========================
# Knowledge Base Configuration
# ===========================

# Ruta al archivo de plantillas de conocimiento
KB_TEMPLATES_PATH=config/kb_templates.json

# Umbral de confianza para match de errores (0.0 - 1.0)
KB_MATCH_THRESHOLD=0.75

# Umbral de confianza para sugerencias de errores (0.0 - 1.0)
KB_CONFIDENCE_THRESHOLD=0.60

# ===========================
# Logging Configuration
# ===========================

# Nivel de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Formato de log (json, text)
LOG_FORMAT=json

# ===========================
# Security Configuration
# ===========================

# Lista de palabras a sanitizar (separadas por coma)
SANITIZE_KEYWORDS=password,token,secret,key,credential,api_key

# ===========================
# Development Configuration
# ===========================

# Entorno (development, staging, production)
ENVIRONMENT=development

# Habilitar modo de prueba (respuestas mock)
ENABLE_TEST_MODE=false

# ===========================
# Locale Configuration
# ===========================

# Idioma por defecto
DEFAULT_LOCALE=es-MX

# Zona horaria
TIMEZONE=America/Mexico_City

# ===========================
# Rate Limiting (para IA)
# ===========================

# Maximo de llamadas a IA por usuario por minuto
AI_RATE_LIMIT_PER_MINUTE=5

# Maximo de llamadas a IA por usuario por dia
AI_RATE_LIMIT_PER_DAY=100

# ===========================
# Alexa Skill Configuration
# ===========================

# Skill ID (obtener de Alexa Developer Console)
# SKILL_ID=amzn1.ask.skill.xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# ===========================
# Testing Configuration
# ===========================

# Habilitar modo de prueba con datos sinteticos
TEST_MODE=false

# Usuario de prueba
TEST_USER_ID=test-user-123
